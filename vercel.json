{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "frontend/$0"
    },
    {
      "src": "/(.*\\.(js|css|json|ico|png|jpg|svg))",
      "dest": "frontend/$0"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/index.html"
    }
  ]
}
